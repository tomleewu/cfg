[colors]
;My colors are set from .Xresources to match everything else
my_background 	= #cc282C34
my_foreground 	= #ABB2BF

;white
my_color0	= #ABB2BF
;green
my_color1	= #98C379
;blue
my_color2       = #61AFEF
;magenta
my_color3       = #C678DD

;transparent
my_color6	= #00b294bb

[bar/main]
monitor = ${env:MONITOR:}
bottom = false
width = 100%
height = 35
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

dpi-x = 0
dpi-y = 0

background = ${colors.my_background}
foreground =  ${colors.my_foreground}

