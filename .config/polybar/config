font-0 = Iosevka,Iosevka Nerd Font:style=Regular:size=11;1
font-1 = Material Icons:style=Regular:size=11;2


modules-left = i3 xwindow
modules-center = date 
modules-right = network pulseaudio musicinfo battery

tray-position =
